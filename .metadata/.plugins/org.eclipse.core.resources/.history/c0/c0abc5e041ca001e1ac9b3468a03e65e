import java.util.*;

public class LeetcodeproblemsString {

	public static void main(String[] args) {
		String[] sent = {"alice and bob love leetcode", "i think so too", "this is great thanks very much"};
		mostwordfound(sent);
	}

	private static Integer mostwordfound(String[] sent) {

		int countLength = 0;
		ArrayList<Integer> as = new ArrayList<>();

		for (String s : sent) {

			String split[] = s.split(" ");
			countLength = split.length;
			as.add(countLength);
		}

		Integer ass = Collections.max(as);

		return ass;

	}

}
