package understandopps;

public class InsideCodingStrings {

	public static String right2(String str) {
		
	   
	  
//	    String var = str.substring(str.length()-2);
//	    
//	    
//	return var+ str.substring(0, str.length()-2);
//		
//	StringBuffer s1= new StringBuffer(str);
//	
//	   s1.deleteCharAt(0);
//	   s1.deleteCharAt(str.length()-2);
//		
	
		String s = "";
		
		for(int i=str.length()-1 ; i<= str.length() ; i--)
		{
			s= s+i;
		}
		return s;
		
		
		
		
		
	}
	  
	  
	  
	public static void main (String [] args)
	{
		right2("Hello");
