import java.util.*;

public class LeetcodeproblemsString {

	   public static void main(String[] args) {
		String[] sent = { "please wait", "continue to fight", "continue to win" };
		mostwordfound(sent);
	}

	private static void mostwordfound(String[] sent) {
		String s = sent.toString();
		sent = s.split(",");
		int count = 0;
		ArrayList<Integer> as = new ArrayList<>();
		for (int i = 0; i < sent.length; i++) {
			// String split[] = sent[i].split(" ");
			String[] split = sent[i].split(" ");
			for (int j = 0; j < split.length; j++) {
				
                 as.add(count++);
			}
			count=0;

		}
		
		for(Integer test : as) {
			System.out.println(test);
		}

	}

}
