	sumofallnumbers(num); /*---->>> logic is still missing */
     
     
	}

	public  static void sumofallnumbers(int num) {
	 
		int number=0;
		for(int i =0; i<=num ; i++) {
			number = number +i;
			number++;
		}
		System.out.println(number);
			
	}

}
