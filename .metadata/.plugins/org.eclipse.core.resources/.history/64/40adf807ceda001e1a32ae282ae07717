package JavaOtherStuffs;

import java.io.*;

/**
 * @author srinidhi.k
 *
 */
public class Serlaization {

	String name;
	int id;
	
	public  Serlaization(String name , int id) {
		this.name = name;
		this.id = id;
	}
	
	
	
	
	
	public static void main(String[] args)  {

		Serlaization sc = new Serlaization("nidhi", 2);
		FileOutputStream fout = null;
		File file = new File("E:\\OneDrive - Yethi consulting Pvt Ltd\\\\Documents\\nidhi.txt");

		/*
		 * file.createNewFile();
		 * 
		 * fout = new FileOutputStream(file); ObjectOutputStream out = new
		 * ObjectOutputStream(fout); out.writeObject(out);
		 */
	      file.createNewFile();
	      fout = new FileOutputStream(file); // creating output byte stream
	      ObjectOutputStream out = new ObjectOutputStream(fout);// object stream
	      out.writeObject(out); // used to convert java object into stream of bytes and  // make it to transfer0
	    
	     
	       finally {
			fout.close();
		}
		

	}

}
